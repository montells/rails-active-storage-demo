<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Image:</strong>
  <br>
  <%= image_tag @post.watermarked_image if @post.image.attached? %>
</p>

<p>
  <strong>Photos:</strong>
  <br>
  <% @post.photos.each do |photo| %>
    <%= image_tag photo.variant(resize: "200x200", monochrome: true) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
